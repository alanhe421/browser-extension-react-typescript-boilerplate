{
  "name": "react-typescript-boilerplate",
  "version": "1.1.0",
  "description": "A boilerplate project to quickly build a Chrome extension using TypeScript and React (built using webpack).",
  "license": "MIT",
  "author": "Joe Martella",
  "scripts": {
    "build": "npm run build:prod:chrome",
    "build:dev": "node development/manifest.js --platform=chrome && webpack --config webpack.dev.js",
    "build:prod": "npm run build:prod:chrome",
    "build:prod:chrome": "node development/manifest.js --platform=chrome && webpack --config webpack.prod.js",
    "build:prod:firefox": "node development/manifest.js --platform=firefox && webpack --config webpack.prod.js",
    "dev": "webpack -w --config webpack.dev.js --env.reload=true",
    "pack": "npm run build && cd dist && npx crx pack -p ./key.pem -o ../dist/boilerplate.crx"
  },
  "dependencies": {
    "chrome-tab-identifier": "0.0.1",
    "localforage": "^1.10.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^7.20.5",
    "react-router-dom": "^6.0.2",
    "tea-component": "^2.7.2",
    "zustand": "^3.7.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.60",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "copy-webpack-plugin": "^6.0.4",
    "css-loader": "^3.4.2",
    "less": "^4.1.2",
    "less-loader": "^7.3.0",
    "style-loader": "^0.20.3",
    "ts-loader": "^4.0.1",
    "typescript": "^4.5.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-extension-reloader": "^1.1.4",
    "webpack-merge": "^4.2.2",
    "yargs": "^17.4.0"
  },
  "crxConfig": {
    "issueURL": "https://github.com/alanhg/chrome-extension-react-typescript-boilerplate/issues"
  }
}
