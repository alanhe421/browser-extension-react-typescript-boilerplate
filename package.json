{
  "name": "chrome-extension-react-typescript-boilerplate",
  "version": "1.1.0",
  "description": "A boilerplate project to quickly build a Chrome extension using TypeScript and React (built using webpack).",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js",
    "watch": "webpack -w --config webpack.dev.js",
    "pack": "npm run build && cd dist && npx crx pack -p ../key.pem --zip-output ../dist/boilerplate.zip"
  },
  "author": "Joe Martella",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.60",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "css-loader": "^3.4.2",
    "less": "^4.1.2",
    "less-loader": "^7.3.0",
    "style-loader": "^0.20.3",
    "ts-loader": "^4.0.1",
    "typescript": "^4.5.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "copy-webpack-plugin": "^6.0.4"
  },
  "dependencies": {
    "localforage": "^1.10.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^7.20.5",
    "react-router-dom": "^6.0.2",
    "tea-component": "^2.7.2"
  }
}
